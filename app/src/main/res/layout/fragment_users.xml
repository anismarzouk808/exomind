<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.users.UsersFragment"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <EditText
        android:id="@+id/search_bar_edtx"
        android:layout_width="0dp"
        android:layout_height="@dimen/search_user_editText_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:drawablePadding="8dp"
        app:drawableStartCompat="@drawable/ic_search_24"
        android:hint="@string/search_user_hint"
        android:inputType="textPostalAddress"
        android:paddingBottom="12dp"
        android:paddingEnd="45dp"
        android:paddingStart="8dp"
        android:paddingTop="12dp"
        android:textSize="15sp"
        android:importantForAutofill="no" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/users_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/search_bar_edtx"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_user"
        />

</androidx.constraintlayout.widget.ConstraintLayout>